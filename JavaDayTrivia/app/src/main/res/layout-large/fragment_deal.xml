<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/blue_detail"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_beacon_follow_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="110dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/macbookpro"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/activity_beacon_follow_logo"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="20dp"
            android:background="@color/translucent"
            android:src="@drawable/aws_logo"
            android:contentDescription="@string/app_name"
            android:padding="4dp" />

        <LinearLayout
            android:id="@+id/activity_beacon_follow_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_beacon_follow_company"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="5dp"
                android:background="@color/blue_detail_light"
                android:ellipsize="end"
                android:text="MacBookPro 10% de Descuento"
                android:gravity="center"
                android:singleLine="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_follow_companyTextSize"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/activity_beacon_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_detail"
        android:text="FOLLOW"
        android:textColor="@android:color/white"
        android:textSize="@dimen/actionbar_textSize" />

</LinearLayout>