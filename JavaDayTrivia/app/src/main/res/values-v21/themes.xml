<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/blue_app</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- inherit from the material theme -->
    <style name="CustomActionBarTheme2" parent="android:Theme.Material.Light">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/blue_app</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/blue</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CustomTransulcent" parent="android:Theme.Translucent.NoTitleBar">

        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/blue_app</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CustomTransulcent2" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/blue_app</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/blue</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>